{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <section class="col .col-xs-12 .col-sm-6 .col-md-8 col-lg-12 main">
            <h3 class="text-primary">Projets</h3><hr>
            <table class="table table-striped table-bordered table-responsive">
                <thead>
                <tr><th>DateDebut</th><th>DateFin</th><th>Designation</th><th>idChefProjet</th></tr>
                </thead>
                <tbody>
                <div>
                    {% for projet in projets %}
                        {% if projet.dateDebut|date('Y-m-d') > "now"|date('Y-m-d') and projet.dateFin|date('Y-m-d') < "now"|date('Y-m-d') %}
                            <tr>
                                <td>{{projet.dateDebut|date('d-m-Y')}}</td>
                                <td>{{projet.dateFin|date('d-m-Y')}}</td>
                                <td>{{projet.designation}}</td>
                                <td>{{projet.idChefProjet}}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
    </div>
    </section>
    </div>
{% endblock %}

    {% block stylesheets %}

    {% endblock %}